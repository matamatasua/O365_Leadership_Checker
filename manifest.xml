<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appfordevice/2013/may/v1.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
           xsi:type="MailApp">
  
  <Id>b7e3f8a2-4d5c-6e9f-1a2b-3c4d5e6f7890</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Leadership Checker</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Leadership Checker"/>
  <Description DefaultValue="Quickly check if your leadership team is on an email thread"/>
  
  <IconUrl DefaultValue="https://matamatasua.github.io/O365_Leadership_Checker/assets/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://matamatasua.github.io/O365_Leadership_Checker/assets/icon-128.png"/>
  <SupportUrl DefaultValue="https://github.com/matamatasua/O365_Leadership_Checker"/>
  
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://matamatasua.github.io/O365_Leadership_Checker/taskpane.html"/>
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  
  <Permissions>ReadItem</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  
  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">
      
      <Requirements>
        <bt:Sets DefaultMinVersion="1.3">
          <bt:Set Name="Mailbox"/>
        </bt:Sets>
      </Requirements>
      
      <Hosts>
        <Host xsi:type="MailHost">
          <DesktopFormFactor>
            <FunctionFile resid="functionFile"/>
            
            <ExtensionPoint xsi:type="MessageReadCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="leadershipGroup">
                  <Label resid="groupLabel"/>
                  <Control xsi:type="Button" id="leadershipButton">
                    <Label resid="buttonLabel"/>
                    <Supertip>
                      <Title resid="buttonLabel"/>
                      <Description resid="buttonDesc"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="icon16"/>
                      <bt:Image size="32" resid="icon32"/>
                      <bt:Image size="80" resid="icon80"/>
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="taskpaneUrl"/>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>
            
          </DesktopFormFactor>
        </Host>
      </Hosts>
      
      <Resources>
        <bt:Images>
          <bt:Image id="icon16" DefaultValue="https://matamatasua.github.io/O365_Leadership_Checker/assets/icon-16.png"/>
          <bt:Image id="icon32" DefaultValue="https://matamatasua.github.io/O365_Leadership_Checker/assets/icon-32.png"/>
          <bt:Image id="icon80" DefaultValue="https://matamatasua.github.io/O365_Leadership_Checker/assets/icon-80.png"/>
        </bt:Images>
        <bt:Urls>
          <bt:Url id="functionFile" DefaultValue="https://matamatasua.github.io/O365_Leadership_Checker/commands.html"/>
          <bt:Url id="taskpaneUrl" DefaultValue="https://matamatasua.github.io/O365_Leadership_Checker/taskpane.html"/>
        </bt:Urls>
        <bt:ShortStrings>
          <bt:String id="groupLabel" DefaultValue="Leadership"/>
          <bt:String id="buttonLabel" DefaultValue="Check Leadership"/>
          <bt:String id="buttonDesc" DefaultValue="Check if leadership team members are on this email"/>
        </bt:ShortStrings>
        <bt:LongStrings>
          <bt:String id="buttonDesc" DefaultValue="Scan the email recipients to see which leadership team members are included"/>
        </bt:LongStrings>
      </Resources>
      
    </VersionOverrides>
  </VersionOverrides>
  
</OfficeApp>
